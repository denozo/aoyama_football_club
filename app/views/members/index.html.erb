<section class="container mt-5">
  <!--セクションタイトル-->
  <h3 class="row section-ttl justify-content-center mb-5">
    <span>選手・スタッフ一覧</span>
  </h3>

  <!--メンバー追加画面へのリンク-->
  <div class="container">
    <div class="row justify-content-around">
        <% @members.each do |member| %>
        <!--カードの枠-->
        <article class="card mt-4 shadow" style="max-width: 20rem;">
            <!--カード上部に画像を表示-->
            <%= link_to member_path(member.id) do %>
              <%= attachment_image_tag member, :image, :fill, 300, 300, fallback: "no_image.jpg", size:'300x300', class: "card-img-button" %>
            <% end %>
            <!--カード本文-->
            <div class="card-body">
              <!--カードの副見出し-->
              <span class="card-subtitle"><%= "<" + member.grade_i18n + ">" %></span>
              <!--カードの見出し-->
              <h4 class="card-title font-weight-bold"><%= member.last_name + " " + member.first_name %></h4>
            </div>
        </article>
        <% end %>
    </div>
  </div>
  
  <!--ページネーション-->
  <div class="row justify-content-center mt-5">
    <%= paginate @members %>
  </div>
  
</section>
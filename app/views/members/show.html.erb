<section class="container p-5">
  <!--セクションタイトル-->
  <h3 class="row section-ttl justify-content-center mb-5">
    <span>スタッフ・選手詳細</span>
  </h3>

  <div class="bg-light p-3">
    <div class="row justify-content-center">
      <!--メンバー画像-->
      <div class="mr-4">
        <%= attachment_image_tag @member, :image, :fill, 300, 300, fallback: "no_image.jpg", size:'300x300' %>
      </div>
      <!--メンバー詳細説明-->
      <div class="font-weight-bold ml-4">
        <label>氏名：</label>
        <%= @member.last_name + " " + @member.first_name %>
        <br>
        <label>学年：</label>
        <%= @member.grade_i18n %>
        <br>
        <label>ポジション：</label>
        <%= @member.position %>
        <br>
        <label>身長：</label>
        <%= @member.height %>
        <br>
        <label>体重：</label>
        <%= @member.weight %>
        <br>
        <label>出身チーム：</label>
        <%= @member.original_team %>
        <br>
        <label>趣味：</label>
        <%= @member.hobby %>
        <br>
        <label>目標：</label>
        <%= @member.goal %>
      </div>
    </div>
    <div class="row justify-content-end">
      <%= link_to "戻る", members_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</section>
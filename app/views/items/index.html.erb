<h1>アイテム一覧</h1>

<table>
  <head>
    <tr>
      <th>アイテム</th>
    </tr>
  </head>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 100, 100 %>
        <% end %>
      </td>
      <td><%= item.name %></td>
    </tr>
    <% end %>
  </tbody>

</table>
<section class="inner">
  <!--セッションタイトル-->
  <div class="section-ttl">
    <h4 class="">OB紹介登録</h4>
  </div>

  <div class="container admins_graduate_edit">
    <%= form_with model: @graduate, url: '/admins/graduates', local:true do |f| %>
    <!--OB編集フォーム-->
      <!--写真-->
      <div class="row">
        <div class="col-10 col-md-6 form-group">
          <%= f.label :image, "集合写真", class: "form-label" %>
          <%= f.attachment_field :image %>
        </div>
      </div>
      <!--卒業年度-->
      <div class="row">
        <div class="col-2 form-group">
          <%= f.label :year, "卒業年度", class: "form-label" %>
          <%= f.text_field :year, class: "form-control" %>
        </div>
      </div>
      <!--卒業生一覧-->
      <div class="row">
        <div class="col-10 col-md-12 form-group">
          <%= f.label :member_list, "メンバー", class: "form-label" %><span>（１名ずつ改行して入力してください。）</span>
          <%= f.text_area :member_list, class: "form-control", rows: "10" %>
        </div>
      </div>
      <!--卒業生の主な進路一覧-->
      <div class="row">
        <div class="col-10 col-md-12 form-group">
          <%= f.label :career_after_graduation, "主な進路", class: "form-label" %><span>（改行して入力してください。）</span>
          <%= f.text_area :career_after_graduation, class: "form-control", rows: "10" %>
        </div>
      </div>

      <div class="row actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>

    <% end %>
  </div>

</section>

<!--フッター-->
<%= render '/layouts/footer' %>
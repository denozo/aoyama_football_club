<h1>お知らせ登録</h1>

<%= form_with model: @information, url: "/admins/informations", local:true do |f| %>

<div class="form-group">
  <%= f.radio_button :category, Information.categories.key(0) %>
  <%= f.label :category, Information.categories_i18n[:general] %>
  
  <%= f.radio_button :category, Information.categories.key(1) %>
  <%= f.label :category, Information.categories_i18n[:announcement] %>
  
  <%= f.radio_button :category, Information.categories.key(2) %>
  <%= f.label :category, Information.categories_i18n[:other] %>
</div>

<div class="form-group">
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title %>
</div>

<div class="form-group">
  <%= f.label :content, "内容" %>
  <%= f.text_area :content %>
</div>

<div class="form-group">
  <%= f.label :image, "画像" %>
  <%= f.attachment_field :image %>
</div>


<div class="form-group">
  <%= f.submit "新規登録" %>
</div>

<% end %>
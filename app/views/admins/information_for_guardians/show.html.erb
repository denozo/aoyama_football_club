<section class="container col-md-5 mt-5">
  <!--セクションタイトル-->
  <h2 class="section-ttl row mb-3">保護者専用お知らせ詳細</h2>

  <!-- サクセスメッセージの表示 -->
  <p id="notice" class="text-danger">
    <%= notice %>
  </p>

  <!--保護者専用お知らせ詳細-->
  <div class="row justify-content-center m-5">
    <%= attachment_image_tag  @informationforguardian, :image, :fill, 300, 300, fallback: "no_image.jpg", size:'300x300' %>
  </div>

  <div class="row justify-content-center bg-light">
    <table class="table">
      <thead>
        <tr>
          <th class="col-4">項目</th>
          <th class="col-8">詳細</th>
        </tr>
      </thead>
      <tbody>
        <tr>
    			<td>カテゴリー</td>
    			<td><%= @informationforguardian.category_i18n %></td>
        </tr>
        <tr>
    			<td>タイトル</td>
    			<td><%= @informationforguardian.title %></td>
        </tr>
        <tr>
    			<td>内容</td>
    			<td><%= simple_format(@informationforguardian.content) %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <%= link_to "編集", edit_admins_information_for_guardian_path(@informationforguardian.id), class: "btn btn-outline-secondary m-3" %>
  <%= link_to "削除", admins_information_for_guardian_path(@informationforguardian.id), method: :delete, "data-confirm" => "表示されているお知らせを削除しますか?", class: "btn btn-outline-secondary text-danger m-3" %>
  <%= link_to "戻る", admins_information_for_guardians_path, class: "btn btn-outline-secondary m-3" %>

</section>
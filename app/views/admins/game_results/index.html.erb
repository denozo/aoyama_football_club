<section class="container mt-5">
  <!--セクションタイトル-->
  <h2 class="section-ttl row mb-3 ml-2">試合結果一覧</h2>

  <!--メンバー追加画面へのリンク-->
  <div>
    <%= link_to "試合結果を登録する", new_admins_game_result_path, class: "btn btn-outline-secondary m-3" %>
  </div>

  <!-- サクセスメッセージの表示 -->
  <p id="notice" class="text-danger">
    <%= notice %>
  </p>
  
  <!--メンバー一覧-->
  <div class="table-responsive">
    <table class="table table-light table-striped">
      <head>
        <tr class="table-dark text-dark">
          <th>開催日</th>
          <th>大会名</th>
          <th>試合名</th>
          <th></th>
          <th></th>
        </tr>
      </head>
      <tbody>
        <% @game_results.each do |game_result| %>
        <tr>
          <td><%= game_result.event_date.strftime("%Y-%m-%d") %></td>
          <td><%= game_result.tournament_name %></td>
          <td><%= game_result.game_title %></td>
          <td><%= link_to "詳細", admins_game_result_path(game_result.id), class: "text-dark link-secondary" %></td>
          <td><%= link_to "削除", admins_game_result_path(game_result.id), method: :delete, "data-confirm" => "削除しますか？", class: "text-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <%= paginate @game_results %>

</section>
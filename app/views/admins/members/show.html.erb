<h1><%= @category.category_name %>詳細</h1>

<div>
  <%= attachment_image_tag @member, :image, :fill, 200, 200 %>
</div>

<div>
<label>氏名</label>
<%= @member.last_name + " " + @member.first_name %>
</div>

<div>
<label>フリガナ</label>
<%= @member.last_name_kana + " " + @member.first_name_kana %>
</div>


<div>
<label>学年</label>
<%= @member.grade %>
</div>

<div>
<label>ポジション</label>
<%= @member.position %>
</div>

<div>
<label>身長</label>
<%= @member.height %>
</div>

<div>
<label>体重</label>
<%= @member.weight %>
</div>

<div>
<label>出身チーム</label>
<%= safe_join(@member.original_team.split("\n"),tag(:br)) %>
</div>

<div>
<label>趣味</label>
<%= safe_join(@member.hobby.split("\n"),tag(:br)) %>
</div>

<div>
<label>目標</label>
<%= safe_join(@member.goal.split("\n"),tag(:br)) %>
</div>

<%= link_to "編集", edit_admins_member_path(@member.id) %>
<%= link_to "削除", admins_member_path(@member.id), method: :delete, "data-confirm" => "表示されているメンバーを削除しますか?" %>
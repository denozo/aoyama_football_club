<section class="container-fluid">
  <div class="row justify-content-center">
    <div class="input_box shadow">
      <h2 class="section-ttl col-md-12">Admin Sign In</h2>
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>

        <div class="field col-md-12">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field col-md-12">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions col-2">
          <%= f.submit "ログイン", class: "btn btn-outline-secondary m-3" %>
        </div>
      <% end %>
    </div>
  </div>
</section>